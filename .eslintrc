{
    "root": true,
    "env": {
        "node": true,
        "es6": true
    },
    "extends":[
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 6
    },
    "rules": {
        "camelcase": "error",
        "consistent-return": "error",
        "dot-notation": "error",
        "new-cap": "error",
        "no-underscore-dangle": "error",
        "no-use-before-define": "error",
        "no-var": "error",
        "quotes": ["error", "single", "avoid-escape"],
        "semi": ["error", "always"]
    }
}
